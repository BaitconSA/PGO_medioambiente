<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:layout="sap.ui.layout">

    <Dialog id="dialogUploadPSDA" title="{i18n>dialogTitle}" class="sapUiResponsiveContentPadding">
        <content>
            <layout:VerticalLayout>
                <!-- Número Nota de Pedido -->
                <VBox class="sapUiMediumMarginBottom">
                    <Label text="{i18n>orderNumber}" required="true" />
                    <Select 
                        items="{
                            path: 'mainModel>/OrderNotes', 
                            templateShareable: false
                        }"
                        selectedKey="{mainModel>/DatosFormularioPSDA/payload/NumeroNotaPedido}">
                     
                        <core:Item key="{mainModel>nro_nota_pedido}" text="{mainModel>nro_nota_pedido} - {mainModel>descripcion}" />
                    </Select>
                </VBox>
                
                <!-- Subproductos del proceso de obra -->
                <VBox class="sapUiSmallMarginBottom">
                    <Title level="H2" text="{i18n>subProductsTitle}" />

                    <HBox class="sapUiSmallMarginBottom">
                        <Label text="{i18n>wood}" />
                        <Input 
                            value="{mainModel>/DatosFormularioPSDA/payload/Subproductos/Madera}" 
                            placeholder="{i18n>enterQuantity}" 
                            class="sapUiMediumMarginBeginEnd"/>
                        <core:Icon text="{i18n>explore}" src="sap-icon://attachment" class="IconFormUploadPSDADialog" />
                    </HBox>

                    <HBox class="sapUiSmallMarginBottom">
                        <Label text="{i18n>metal}" />
                        <Input 
                            value="{mainModel>/DatosFormularioPSDA/payload/Subproductos/Metal}" 
                            placeholder="{i18n>enterQuantity}" 
                            class="sapUiSmallMarginBeginEnd"/>
                        <core:Icon text="{i18n>explore}" src="sap-icon://attachment" class="IconFormUploadPSDADialog" />
                    </HBox>

                    <HBox class="sapUiSmallMarginBottom">
                        <Label text="{i18n>plastic}" />
                        <Input 
                            value="{mainModel>/DatosFormularioPSDA/payload/Residuos/Plastico}"
                            placeholder="{i18n>enterQuantity}" 
                            class="sapUiSmallMarginBeginEnd"/>
                        <core:Icon text="{i18n>explore}" src="sap-icon://attachment" class="IconFormUploadPSDADialog" />
                    </HBox>

                    <HBox class="sapUiSmallMarginBottom">
                        <Label text="{i18n>aggregates}" />
                        <Input 
                            value="{mainModel>/DatosFormularioPSDA/payload/Subproductos/Agregados}" 
                            placeholder="{i18n>enterQuantity}" 
                            class="sapUiSmallMarginBeginEnd"/>
                        <core:Icon text="{i18n>explore}" src="sap-icon://attachment" class="IconFormUploadPSDADialog" />
                    </HBox>

                    <HBox class="sapUiSmallMarginBottom">
                        <Label text="{i18n>excessSoil}" />
                        <Input 
                            value="{mainModel>/DatosFormularioPSDA/payload/Subproductos/ExcesoTierra}" 
                            placeholder="{i18n>enterQuantity}" 
                            class="sapUiSmallMarginBeginEnd"/>
                        <core:Icon text="{i18n>explore}" src="sap-icon://attachment" class="IconFormUploadPSDADialog" />
                    </HBox>

                    <HBox class="sapUiSmallMarginBottom">
                        <Label text="{i18n>paperCardboard}" />
                        <Input 
                         value="{mainModel>/DatosFormularioPSDA/payload/Subproductos/PapelCarton}"  
                         placeholder="{i18n>enterQuantity}" 
                         class="sapUiSmallMarginBeginEnd"/>
                        <core:Icon text="{i18n>explore}" src="sap-icon://attachment" class="IconFormUploadPSDADialog" />
                    </HBox>
                </VBox>

                <!-- Residuos -->
                <VBox class="sapUiSmallMarginBottom ">
                    <Title level="H2" text="{i18n>wasteTitle}" />

                    <HBox class="sapUiSmallMarginBottom">
                        <Label text="{i18n>liquidWaste}" />
                        <Input 
                            value="{mainModel>/DatosFormularioPSDA/payload/Residuos/ResiduosLiquidos}"  
                            placeholder="{i18n>enterQuantity}" 
                            class="sapUiSmallMarginBeginEnd"/>
                        <core:Icon text="{i18n>explore}" src="sap-icon://attachment" class="IconFormUploadPSDADialog" />
                    </HBox>

                    <HBox class="sapUiSmallMarginBottom">
                        <Label text="{i18n>solidWaste}" />
                        <Input 
                            value="{mainModel>/DatosFormularioPSDA/payload/Residuos/ResiduosSolidos}"
                            placeholder="{i18n>enterQuantity}" 
                            class="sapUiSmallMarginBeginEnd"/>
                        <core:Icon text="{i18n>explore}" src="sap-icon://attachment" class="IconFormUploadPSDADialog" />
                    </HBox>

                    <HBox class="sapUiSmallMarginBottom">
                        <Label text="{i18n>generalWaste}" />
                        <Input 
                            value="{mainModel>/DatosFormularioPSDA/payload/Residuos/ResiduosGenerales}"
                            placeholder="{i18n>enterQuantity}" 
                            class="sapUiSmallMarginBeginEnd"/>
                        <core:Icon text="{i18n>explore}" src="sap-icon://attachment" class="IconFormUploadPSDADialog" />
                    </HBox>

                    <HBox class="sapUiSmallMarginBottom">
                        <Label text="{i18n>specialWaste}" />
                        <Input 
                            value="{mainModel>/DatosFormularioPSDA/payload/Residuos/ResiduosEspeciales}"
                            placeholder="{i18n>enterQuantity}" 
                            class="sapUiSmallMarginBeginEnd"/>
                        <core:Icon text="{i18n>explore}" src="sap-icon://attachment" class="IconFormUploadPSDADialog" />
                    </HBox>

                    <HBox class="sapUiSmallMarginBottom">
                        <Label text="{i18n>sewageWaste}" />
                        <Input 
                            value="{mainModel>/DatosFormularioPSDA/payload/Residuos/ResiduosAlcantarillado}"
                            placeholder="{i18n>enterQuantity}" 
                            class="sapUiSmallMarginBeginEnd"/>
                        <core:Icon text="{i18n>explore}" src="sap-icon://attachment" class="IconFormUploadPSDADialog" />
                    </HBox>

                    <HBox class="sapUiSmallMarginBottom">
                        <Label text="{i18n>pathogenicWaste}" />
                        <Input 
                            value="{mainModel>/DatosFormularioPSDA/payload/Residuos/ResiduosPatogenos}"
                            placeholder="{i18n>enterQuantity}" 
                            class="sapUiSmallMarginBeginEnd"/>
                        <core:Icon text="{i18n>explore}" src="sap-icon://attachment" class="IconFormUploadPSDADialog" />
                    </HBox>
                </VBox>

                <!-- Reclamos -->
                <VBox class="sapUiSmallMarginTop">
                    <Title level="H2" text="{i18n>complaintsTitle}" />

                    <HBox class="sapUiSmallMarginBottom">
                        <Label text="{i18n>numberOfComplaints}" />
                        <Input 
                            value="{mainModel>/DatosFormularioPSDA/payload/Reclamos/NumeroReclamos}"
                            placeholder="{i18n>enterQuantity}" 
                            class="sapUiSmallMarginBeginEnd"/>
                        <core:Icon text="{i18n>explore}" src="sap-icon://attachment" class="IconFormUploadPSDADialog" />
                    </HBox>
                </VBox>

                  <!-- Energía -->
                  <VBox class="sapUiSmallMarginTop">
                    <Title level="H2" text="{i18n>energyTitle}" />

                    <HBox class="sapUiSmallMarginBottom">
                        <Label text="{i18n>powerConsumption}" />
                        <Input 
                            value="{mainModel>/DatosFormularioPSDA/payload/Energia/ConsumoEnergia}"
                            placeholder="{i18n>enterQuantity}" 
                            class="sapUiSmallMarginBeginEnd"/>
                        <core:Icon text="{i18n>explore}" src="sap-icon://attachment" class="IconFormUploadPSDADialog" />
                    </HBox>
                    <HBox class="sapUiSmallMarginBottom">
                        <Label text="{i18n>fuelConsumption}" />
                        <Input 
                            value="{mainModel>/DatosFormularioPSDA/payload/Energia/ConsumoCombustible}"
                            placeholder="{i18n>enterQuantity}" 
                            class="sapUiSmallMarginBeginEnd"/>
                        <core:Icon text="{i18n>explore}" src="sap-icon://attachment" class="IconFormUploadPSDADialog" />
                    </HBox>

                     <!-- Capacitación -->
                <VBox class="sapUiSmallMarginTop">
                    <Title level="H2" text="{i18n>trainingTitle}" />

                    <HBox class="sapUiSmallMarginBottom">
                        <Label text="{i18n>trainingHours}" />
                        <Input 
                            value="{mainModel>/DatosFormularioPSDA/payload/Capacitacion/HorasCapacitacion}"
                            placeholder="{i18n>enterQuantity}" 
                            class="sapUiSmallMarginBeginEnd"/>
                        <core:Icon text="{i18n>explore}" src="sap-icon://attachment" class="IconFormUploadPSDADialog" />
                    </HBox>
                </VBox>
                <!-- Comentarios Generales -->
                <VBox class="sapUiSmallMarginTop">
                    <Title level="H2" text="{i18n>generalComments}" />
                    <TextArea 
                        value="{mainModel>/DatosFormularioPSDA/payload/ComentariosGenerales}"
                        width="100%" 
                        placeholder="{i18n>enterComments}" 
                        class="sapUiSmallMarginBeginEnd"/>
                </VBox>
                <!-- PSDA firmada por RA -->
                <VBox class="sapUiSmallMarginTop">
                    <Title level="H2" text="{i18n>psdaSigned}" />

                    <HBox class="sapUiSmallMarginBottom">
                        <Input 
                            value="{mainModel>/DatosFormularioPSDA/payload/PSDA_Firmada}"
                            placeholder="{i18n>enterQuantity}" 
                            class="sapUiSmallMarginBeginEnd"/>
                        <core:Icon text="{i18n>explore}" src="sap-icon://attachment" class="IconFormUploadPSDADialog" />
                    </HBox>
                </VBox>
                </VBox>
            </layout:VerticalLayout>
        </content>
        <beginButton>
            <Button text="{i18n>accept}" press="onAcceptPress"/>
        </beginButton>
        <endButton>
            <Button text="{i18n>cancel}" press="onCancelPress"/>
        </endButton>
    </Dialog>

</core:FragmentDefinition>
