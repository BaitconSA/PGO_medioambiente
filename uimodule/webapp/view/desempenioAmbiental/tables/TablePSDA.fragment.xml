<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core">

    <VBox class="sapUiSmallMarginTop">
        <Button
            icon="sap-icon://add"
            text="{i18n>uploadManualData}"
            press=".onOpenDialog"
            class="sapUiSmallMarginBottom">
            <customData>
                <core:CustomData key="param" value="PSDA"/>
            </customData>
        </Button>

        <Table id="myTable" inset="false" items="{mainModel>/DatosFormularioPSDA/TablePSDA/Data}">
            <columns>
                <Column>
                    <Text text="{i18n>templateNumber}"/>
                </Column>
                <Column>
                    <Text text="{i18n>deliveryDate}"/>
                </Column>
                <Column>
                    <Text text="{i18n>control}"/>
                </Column>
                <Column>
                    <Text text="{i18n>status}"/>
                </Column>
                <Column hAlign="Left">
                    <Text text="{i18n>actions}"/>
                </Column>
            </columns>
            <items>
                <ColumnListItem>
                    <cells>
                        <Label text="{templateNumber}" />
                        <Label text="{fechaUltimoMesInformado}" />
                        <Label text="{fechaMesAInformar}"  />               
                        <GenericTag text="{mainModel>control/descripcion}" design="StatusIconHidden" status="{mainModel>control/state}" />
                        <HBox>
                            <Button icon="sap-icon://paper-plane" type="Accept" press="onAddManual" class="sapUiSmallMarginEnd" />
                            <Button icon="sap-icon://delete" type="Reject" press="onAddManual"/>
                        </HBox>
                        
                    </cells>
                </ColumnListItem>
            </items>
        </Table>
    </VBox>
</core:FragmentDefinition>
