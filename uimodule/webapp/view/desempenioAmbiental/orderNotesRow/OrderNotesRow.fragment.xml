<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core">
    <VBox class="sapUiMediumMarginTop sapUiResponsiveContentPadding" alignItems="Center">
        <!-- Título de la sección -->
        <Title text="{i18n>orderNumber}" level="H2" />

        <!-- Tabla para los meses -->
        <Table class="sapUiTinyMargin" inset="false">
            <columns>
                <!-- Nueva columna: Subproductos del proceso de obra -->
                <Column>
                    <Text text="{i18n>subProducts}" />
                </Column>
                <!-- Nueva columna: Unidad -->
                <Column>
                    <Text text="{i18n>unit}" />
                </Column>
                <!-- Columnas existentes traducidas -->
                <Column>
                    <Text text="{i18n>january}" />
                </Column>
                <Column>
                    <Text text="{i18n>february}" />
                </Column>
                <Column>
                    <Text text="{i18n>march}" />
                </Column>
                <Column>
                    <Text text="{i18n>april}" />
                </Column>
                <Column>
                    <Text text="{i18n>may}" />
                </Column>
                <Column>
                    <Text text="{i18n>june}" />
                </Column>
                <Column>
                    <Text text="{i18n>july}" />
                </Column>
                <Column>
                    <Text text="{i18n>august}" />
                </Column>
                <Column>
                    <Text text="{i18n>september}" />
                </Column>
                <Column>
                    <Text text="{i18n>october}" />
                </Column>
                <Column>
                    <Text text="{i18n>november}" />
                </Column>
                <Column>
                    <Text text="{i18n>december}" />
                </Column>
            </columns>
            <items>
                <ColumnListItem>
                    <cells>
                        <!-- Nuevas celdas: Subproductos del proceso de obra y Unidad -->
                        <Text text="{notasPedidosModel>/subProducts}" />
                        <Text text="{notasPedidosModel>/unit}" />
                        <!-- Celdas existentes traducidas -->
                        <Text text="{notasPedidosModel>/Enero}" />
                        <Text text="{notasPedidosModel>/Febrero}" />
                        <Text text="{notasPedidosModel>/Marzo}" />
                        <Text text="{notasPedidosModel>/Abril}" />
                        <Text text="{notasPedidosModel>/Mayo}" />
                        <Text text="{notasPedidosModel>/Junio}" />
                        <Text text="{notasPedidosModel>/Julio}" />
                        <Text text="{notasPedidosModel>/Agosto}" />
                        <Text text="{notasPedidosModel>/Septiembre}" />
                        <Text text="{notasPedidosModel>/Octubre}" />
                        <Text text="{notasPedidosModel>/Noviembre}" />
                        <Text text="{notasPedidosModel>/Diciembre}" />
                    </cells>
                </ColumnListItem>
            </items>
        </Table>
    </VBox>
</core:FragmentDefinition>
